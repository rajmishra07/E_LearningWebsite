<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Embedded YouTube Video</title>
    <script src="https://www.youtube.com/iframe_api"></script>
    <script src="/assets/child.js" defer></script> <!-- Move this line to the head section -->
    <script src="/assets/word.js" defer></script> 


</head>
<body>
    <div class="row px-3">
      <h2 class=" mt-3 text-center">Let's Learn with fun !</h2>
      <div class="col-lg-6 col-lg-6 mx-auto px-2 mt-5 mb-5 border shadow">
        <div class="text-center mt-5">
            <section id="videoContainer"></section>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="container height d-flex flex-column justify-content-start align-items-center">
            <h1 class="my-4">Word Search</h1>
            <div class="row w-100 justify-content-center">
              <div class="col-md-8">
                  <div class="search position-relative">
                      <input
                          id="search-text"
                          type="text"
                          class="form-control"
                          placeholder="Search any word"
                      />
                      <button id="search-button" class="btn btn-primary search-button ms-2 mt-3">Search</button>

                  </div>
              </div>
          </div>
          
      
            <!-- Cards for synonyms and antonyms (initially hidden) -->
             <div class="row w-100 justify-content-center mt-4" id="result-row" style="display: none;">
                <div class="col-md-5">
                    <div class="card" id="synonyms-container">
                        <div class="card-body">
                            <h3>Synonyms:</h3>
                            <ul id="synonyms-list"></ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="card" id="antonyms-container">
                        <div class="card-body">
                            <h3>Antonyms:</h3>
                            <ul id="antonyms-list"></ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
    
    <!-- <script src="/assets/child.js"></script>
    <script src="/assets/word.js"></script> -->
</body> 
</html> 