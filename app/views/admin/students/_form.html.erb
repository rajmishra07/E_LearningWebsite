<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title" id="exampleModalLabel">Edit Student</h3>
    </div>
    <%= form_with(model: student, remote: true) do |form| %>
    <div class="modal-body">
      <% if @student.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@student.errors.count, "error") %> prohibited this student from being saved:</h2>
        <ul>
          <% @student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="row">
        <div class="col-lg-12">
          <div class="form-group row">
            <div class="col-lg-4">
              <%= form.label :first_name %>
              <%= form.text_field :first_name, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-4">
              <%= form.label :middle_name %>
              <%= form.text_field :middle_name, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-4">
              <%= form.label :last_name %>
              <%= form.text_field :last_name, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-6">
              <%= form.label :father_name %>
              <%= form.text_field :father_name, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-6">
              <%= form.label :address %>
              <%= form.text_field :address, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-6">
              <%= form.label :date_of_birth %>
              <%= form.date_field :date_of_birth, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-6">
              <%= form.label :class_name %>
              <%= form.text_field :class_name, class: 'form-control mt-2 mb-2' %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-6">
              <%= form.label :blood_group %>
              <%= form.text_field :blood_group, class: 'form-control mt-2 mb-2' %>
            </div>

            <div class="col-lg-6">
              <%= form.label :email %>
              <%= form.text_field :email, class: 'form-control mt-2 mb-2'%>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-lg-12">
              <%= form.label :image %>
              <%= form.file_field :image, class: 'form-select mt-2 mb-2' %>
            </div>
          </div>

        </div>
      </div>
      <div class="modal-footer">
        <%= form.submit class: "btn btn-primary mt-2 mb-2" %>
        <%= link_to 'Back', admin_students_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <% end %>
  </div>
</div>





