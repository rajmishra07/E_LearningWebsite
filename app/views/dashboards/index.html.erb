<!-- Courses -->
<div id="courses" class="section">
  <!-- container -->
  <div class="container">
    <!-- row -->
    <div class="row ">
      <div class="section-header text-center">
        <h1>Students</h1>
        <p class="lead fw-bold text-dark">
          Total students of Web_Impact with their details
        </p>
      </div>
    </div>
    <!-- /row -->
  <!-- container -->

    <table class="table table-striped table border shadow ">
      <thead>
        <th>First Name</th>
        <th>last Name</th>
        <th>Email</th>
        <th>Action</th>
      </thead>
      <tbody>
      <% if @user.present? %>	
        <% @user.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'view profile' , member_path(user), class:"btn btn-primary" %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>